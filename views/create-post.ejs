<!DOCTYPE html>
<html lang="en">
<%- include('includes/head.ejs') %>
<body>
    <%- include('includes/header.ejs') %> 
    <main class="fade-in">
        <div class="text-center">
            <h1>Create a New Blog Post</h1>
            <p>Share your thoughts and ideas with the world. Write something amazing!</p>
        </div>
        
        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <ul class="error-messages">
            <% errors.forEach(function(error) { %>
                <li><%= error %></li>
            <% }); %>
            </ul>
        <% } %>
        
        <form action="/create-post" method="POST">
            <fieldset>
                <legend>Post Details</legend>
                <label for="title">Title</label>
                <input type="text" id="title" name="title" required placeholder="Enter a compelling title for your post">

                <label for="body">Content</label>
                <textarea id="body" name="body" required placeholder="Write your post content here... You can use Markdown formatting for rich text."></textarea>

                <div class="form-buttons">
                    <button type="submit" class="create-button">Create Post</button>
                </div>
            </fieldset>
        </form>
    </main>
    <%- include('includes/footer.ejs') %>
</body>
</html>