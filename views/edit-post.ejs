<!DOCTYPE html>
<html lang="en">
<%- include('includes/head.ejs') %>
<body>
    <%- include('includes/header.ejs') %> 
    <main class="fade-in">
        <div class="text-center">
            <h1>Edit Blog Post</h1>
            <p>Update your post content and title to make it even better.</p>
        </div>

        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <ul class="error-messages">
            <% errors.forEach(function(error) { %>
                <li><%= error %></li>
            <% }); %>
            </ul>
        <% } %>

        <form action="/edit-post/<%= post.id %>" method="POST">
            <fieldset>
                <legend>Edit Post Details</legend>
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="<%= post.title %>" required placeholder="Enter a compelling title for your post">

                <label for="body">Content</label>
                <textarea id="body" name="body" required placeholder="Write your post content here... You can use Markdown formatting for rich text."><%= post.body %></textarea>

                <div class="form-buttons">
                    <button type="submit" class="edit-button">Update Post</button>
                    <a href="/post/<%= post.id %>" class="button">Cancel</a>
                </div>
            </fieldset>
        </form>
    </main>
    <%- include('includes/footer.ejs') %>
</body>
</html>